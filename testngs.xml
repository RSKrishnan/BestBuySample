<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="false">
	<listeners>
		<listener class-name="utils.ListnerClass"></listener>
	</listeners>
	<parameter name="url"
		value="https://www.bestbuy.com/?intl=nosplash"></parameter>
	<test name="SignUp and login">
		<parameter name="browser" value="incognito-Chrome"></parameter>
		<classes>
			<class name="test.TC001_SignIn" />
		</classes>
	</test> <!-- Test -->
	<test name="Shopping">
		<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="test.TC002_ShoppingProduct" />
		</classes>
	</test> <!-- Test -->
	<test name="Validation">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="test.TC004_MenuValidation" />
			<class name="test.TC006_BottomLinks" />
		</classes>
	</test> <!-- Test -->

</suite> <!-- Suite -->
